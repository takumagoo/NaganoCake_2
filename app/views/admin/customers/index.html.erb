<h3>会員一覧</h3>

<tabel>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer|%>
    <tr>
      <!--会員ID-->
      <td><%= customer.id %></td>
      <!--氏名(詳細画面に遷移リンク)-->
      <td>
        <% link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %>
        <% end %>
      </td>
      <!--メールアドレス-->
      <td></td>
      <!--ステータス-->
      <td></td>
    </tr>
  </tbody>
</tabel>
