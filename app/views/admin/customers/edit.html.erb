<h3>会員情報編集</h3>

<%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
  <div>
    <p>会員ID</p>
  </div>

  <div>
    <%= @customer.id %>
  </div>

  <div>
    <p>氏名</p>

  </div>

  <div>
    <%= f.text_field :last_name %><%= f.text_field :first_name %>
  </div>

  <div>
    <p>フリガナ</p>
  </div>

  <div>
    <%= f.text_field :last_name_kana %><%= f.text_field :last_name_kana %>
  </div>

  <div>
    <p>郵便番号</p>
  </div>

  <div>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <p>電話番号</p>
  </div>

  <div>
    <%= f.text_field :telephone_number %>
  </div>

  <div>
    <p>メールアドレス</p>
  </div>

  <div>
    <%= f.text_field :email %>
  </div>

  <div>
    <p>会員ステータス</p>
  </div>

  <div>
    <%= f.radio_button :is_active, "ture" %>
    <%= f.label :is_active_sale, "有効" %>

    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active_sale_stop, "無効" %>
  </div>

  <%= f.submit '変更を保存' %>

<% end %>
