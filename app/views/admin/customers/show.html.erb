<%= render 'admin/header' %>

<h3>会員詳細</h3>

<!--会員ID-->
<%= @customer.id %>
<!--氏名-->
<%= @customer.last_name %><%= @customer.first_name %>
<!--フリガナ-->
<%= @customer.last_name_kana %><%= @customer.first_name_kana %>
<!--郵便番号-->
<%= @customer.postal_code %>
<!--住所-->
<%= @customer.address %>
<!--電話番号-->
<%= @customer.telephone_number %>
<!--メールアドレス-->
<%= @customer.email %>
<!--会員ステータス-->
<% if @customer.is_deleted %>
  <p>有効</p>
<% else %>
  <p>退会</p>
<% end%>

<!--編集画面に遷移-->
<%= link_to '編集する', edit_admin_customer_path(@customer.id) %>

<!--注文履一覧画面に遷移-->
<%#= link_to '編集する', admin_customers_path %>

