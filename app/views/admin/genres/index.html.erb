<%= render 'admin/header' %>

<div class="container px-5 px-sm-0">
  <h3>ジャンル一覧・追加</h3>
  <div class="col-10 mt-4">
    <%= form_with model: @genre, url:admin_genres_path do |f| %>
      <div class="row mb-4">
       <!--ジャンル追加-->
        <div class="col-2">
          <p>ジャンル名</p>
        </div>
        <div class="col-3">
          <%= f.text_field :name %>
        </div>
        <div class="col-1">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-10">
      <div class="row mb-2">
        <div class= "col-7 border border-right-0 border-left-0 bg-light">
          <div class="col-5 offset-1 mt-2">
           <!--ジャンル一覧-->
          <p>ジャンル</p>
          </div>
        </div>
      </div>

    <div class="col-7">
      <% @genres.each do |genre| %>

          <div class="row  border border-top-0 border-right-0 border-left-0 mb-2">
            <div class="col-4">
              <%= genre.name %>
            </div>
            <div class="col-3 mb-1">
              <!--編集画面遷移ボタン-->
              <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </div>
          </div>

      <% end %>
    </div>

    </div>
  </div>
</div>













