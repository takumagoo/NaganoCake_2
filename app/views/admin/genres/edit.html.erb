<%= render 'admin/header' %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-10">
    <h3>ジャンル編集</h3>
      <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
        <div class="row mt-4">
          <div class="col-2">
            <p>ジャンル名</p>
          </div>
          <div class="col-3">
            <!--ジャンル名-->
            <%= f.text_field :name %>
          </div>
          <div class="col-3">
            <!--保存ボタン-->
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
