<h3>商品編集</h3>

<%= form_with model: @item, url:admin_item_path, method: :patch do |f| %>
<!--商品画像-->
  <%= f.file_field :image, accept: "image/*" %>
<!--商品名-->
  <%= f.text_field :name %>
<!--商品説明-->
  <%= f.text_area :introduction %>
<!--ジャンル-->
  <%= f.select :genres_id, options_from_collection_for_select(Genre.all, :id, :name) %>
<!--税抜き価格-->
  <%= f.text_field :price %>
<!--販売ステータス-->
  <%= f.radio_button :is_active, "ture" %>
  <%= f.label :is_active_sale, "販売中" %>

  <%= f.radio_button :is_active, "false" %>
  <%= f.label :is_active_sale_stop, "販売停止中" %>
<!--変更保存ボタン-->
  <%= f.submit '変更を保存' %>
<% end %>

