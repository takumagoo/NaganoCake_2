<%= render 'public/header' %>

<h3>配送先登録/一覧</h3>

<%= form_with model: @address, url:addresses_path do |f| %>
  <p>郵便番号(ハイフンなし)</p>
  <%= f.text_field :postal_code %>
  <p>住所</p>
  <%= f.text_field :address %>
  <p>宛名</p>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>

<tabel>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to '削除する', address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</tabel>
